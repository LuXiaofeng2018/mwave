\]

\end_inset


\end_layout

\begin_layout Standard
The Hankel function
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
H_{n}^{\left(2\right)}\left(kr\right)=J_{n}\left(kr\right)-iY_{n}\left(kr\right)
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $J_{n}$
\end_inset

 and 
\begin_inset Formula $Y_{n}$
\end_inset

 are Bessel functions of the first and second kind.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
kr\gg\left|n^{2}-\frac{1}{4}\right|
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
J_{n}\left(kr\right)\approx\sqrt{\frac{2}{\pi kr}}\cos\left(kr-\frac{n\pi}{2}-\frac{\pi}{4}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Y_{n}\left(kr\right)\approx\sqrt{\frac{2}{\pi kr}}\sin\left(kr-\frac{n\pi}{2}-\frac{\pi}{4}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
H_{n}^{\left(2\right)} & = & \sqrt{\frac{2}{\pi kr}}\left(\cos\left(kr-\frac{n\pi}{2}-\frac{\pi}{4}\right)-i\sin\left(kr-\frac{n\pi}{2}-\frac{\pi}{4}\right)\right)\\
 & = & \sqrt{\frac{2}{\pi kr}}e^{-i\left(kr-\frac{n\pi}{2}-\frac{\pi}{4}\right)}\\
 & = & \sqrt{\frac{2}{\pi kr}}e^{i\frac{\pi}{4}}e^{in\frac{\pi}{2}}e^{-ikr}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
So, we have
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\sum_{n=-\infty}^{\infty}B_{n}\left(\sqrt{\frac{2}{\pi kr}}e^{i\frac{\pi}{4}}e^{in\frac{\pi}{2}}e^{-ikr}\right)e^{in\theta} & = & \frac{f\left(\theta\right)}{\left(kr\right)^{1/2}}e^{-ikr}\\
\frac{1}{\pi}\left(1+i\right)\frac{1}{\left(kr\right)^{1/2}}e^{-ikr}\sum_{n=-\infty}^{\infty}B_{n}i^{n}e^{in\theta} & = & \frac{f\left(\theta\right)}{\left(kr\right)^{1/2}}e^{-ikr}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f\left(\theta\right)=\frac{1}{\pi}\left(1+i\right)\sum_{n=-\infty}^{\infty}B_{n}i^{n}e^{in\theta}
\]

\end_inset


\end_layout

